[init]
	templatedir = ~/.git.template.d

[color]
	ui = auto

[grep]
	lineNumber = true

[diff]
	renames = true

[alias]
	st = status
	ss = status -s

	co = checkout
	cb = checkout -b

	di = diff
	dm = diff master
	dw = diff --word-diff
	dc = diff --cached
	d1 = diff HEAD~
	d2 = diff HEAD~~
	d3 = diff HEAD~~~

	hist = log --graph --format='%C(yellow)%h%C(auto)%d%C(reset) %s %C(green)<%an>%C(reset)'
