#!/usr/bin/env bash

items=$(
  (
    git status --porcelain --untracked-files 2>/dev/null | grep -E '^.[^ ]'
  ) | \
  fzf --multi --query "$*" --preview-window down,75% --preview 'f() {
    iw="$(echo {} | cut -c 1-2)"
    file="$(echo {} | cut -c 4-)"

    if [ "${iw}" = "??" ]; then
      cd "$(git rev-parse --show-toplevel)"
      git diff --color --no-index -- /dev/null "${file}"
    else
      cd "$(git rev-parse --show-toplevel)"
      git diff --color -- "${file}"
    fi
  }; f' | \
  cut -c 4-
)

if [ -z "${items}" ]; then
  exit 0
fi

(
  cd "$(git rev-parse --show-toplevel)"
  echo "${items}" | xargs git add
)
