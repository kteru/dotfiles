#!/usr/bin/env bash

repository=$( (
  git remote
) | peco --prompt '(repository) QUERY>' --select-1 | head -n 1)

if [ -z "${repository}" ]; then
  exit 0
fi

refspec=$( (
  git branch --sort=-authordate --format "%(refname:short)" | grep -v -E '^(master|develop)'
) | peco --prompt '(refspec) QUERY>' | head -n 1)

if [ -z "${refspec}" ]; then
  exit 0
fi

git push "${repository}" "${refspec}"
